<%- include('../partial/header.ejs') %> <%- include('../partial/nav.ejs') %> <%
if(errorMessage && errorMessage.length > 0) { %>
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  <strong><%= errorMessage %></strong>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<% } %> <% if(successMessage && successMessage.length > 0) { %>
<div class="alert alert-success alert-dismissible fade show" role="alert">
  <strong><%= successMessage %></strong>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<% } %> <%- include('../partial/cartOrdersSubNav.ejs') %>
<table class="table table-striped d-table w-80 justify-content-center mx-auto">
  <thead>
    <tr>
      <th>Product Name</th>
      <th>Price</th>
      <th>Action</th>
    </tr>
  </thead>
  <% if (cart && cart.length > 0) { %>
  <tbody>
    <% let totalPrice = 0; %> <% cart.forEach(item => { %>
    <tr>
      <td><%= item.product.title %></td>
      <td>$<%= item.product.price.toFixed(2) %></td>
      <% totalPrice += item.product.price; %>
      <td>
        <form action="/cart/remove/<%= item._id %>" method="POST">
          <button type="submit" class="btn btn-danger">Remove</button>
        </form>
      </td>
    </tr>
    <% }) %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="2" class="text-right">Items :</td>
      <td><%= cart ? cart.length : 0 %></td>
    </tr>
    <tr>
      <td colspan="2" class="text-right">Total:</td>
      <td>$<%= totalPrice %></td>
    </tr>
    <tr>
      <td colspan="3" class="text-center">
        <form action="/cart/checkout" method="POST">
          <input type="hidden" name="totalPrice" value="<%= totalPrice %>">
          <button type="submit" class="btn btn-success">Checkout</button>
        </form>
      </td>
    </tr>
  </tfoot>
  <% } else { %>
  <tr>
    <td colspan="3" class="text-center">Your cart is empty.</td>
  </tr>
  <% } %>
</table>

<%- include('../partial/footer.ejs') %>
